<%= render 'shared/banner' %>
<section id="video-galery">
  <div class="container d-flex flex-column align-items-center" data-aos="fade-up" data-aos-duration="1000">
    <% if @video_category.thumbnail_videos.present? %>
      <% @video_category.thumbnail_videos.each do |vid| %> 
        <video controls volumeslider disablePictureInPicture controlsList="nodownload" src="https://res.cloudinary.com/virgyldieulefet/video/upload/<%= vid.video.key %>.mp4" data-aos="fade-left" data-aos-duration="1000" data-aos-delay="500" class="video my-5"></video>
      <% end %>
    <% end %>
  </div>
</section>