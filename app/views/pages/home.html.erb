<div class="banner d-flex flex-column align-items-center">
    <h1 class="text-center">PORTFOLIO</h1>
    <h3 class="text-center">DIVID</h3>
    <h5 class= "text-center"> VIDÉO IMMOBILIÈRE . PHOTOGRAPHIE </h5>
  <a class='icon-scroll' href="#videos"></a>
</div>
<h1 class="section-icon text-center" data-aos="fade-up" data-aos-duration="1000"><i class="fas fa-video my-5"></i></h1>
<section id="videos">
  <div class="container d-flex flex-column align-items-center" data-aos="fade-up" data-aos-duration="1000">
  <% if @thumbnail_videos.present? %>
    <% @thumbnail_videos.each do |vid| %> 
      <% if vid.video.attached?%>
          <video controls volumeslider disablePictureInPicture controlsList="nodownload" src="<%=url_for(vid.video)%>" data-aos="fade-<%= vid.direction %>" data-aos-duration="1000" data-aos-delay="500" class="my-5"></video>
      <% end %>
    <% end %>
    <% end %>
  </div>
</section>
	
<h1 class="section-icon text-center" data-aos="fade-up" data-aos-duration="1000"><i class="fas fa-camera"></i></h1>
<section id="galery">
  <div class="container mb-5" data-aos="fade-up" data-aos-duration="1000">
    <div class="row mx-1 d-flex justify-content-center">
    <% if @thumbnail_imgs.present? %>
      <% @thumbnail_imgs.each do |img| %>
        <% if img.photo.attached?%>
       <%= image_tag img.photo, alt:"#{img.photo.attachment.filename.to_s}", class:"photo-galery col-sm-12 col-md-3 col-lg-3 col-xl-4" %>
        <% end %>
      <% end %>
    <% end %>
    </div>
   </div>
   
</section>
